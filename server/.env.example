# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=5000
HOST=0.0.0.0

# ============================================
# DATABASE
# ============================================
MONGODB_URI=mongodb+srv://<user>:<pass>@<cluster>.mongodb.net/<dbname>?retryWrites=true&w=majority

# ============================================
# AUTHENTICATION (JWT + Cookies)
# ============================================
JWT_SECRET=change_me_to_a_long_random_string_min_32_chars
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL_DAYS=7
COOKIE_SAMESITE=lax
COOKIE_SECURE=true

# ============================================
# CLOUDFLARE R2 STORAGE
# ============================================
# Account Settings
R2_ACCOUNT_ID=your_account_id_here
R2_ACCESS_KEY_ID=your_access_key_id
R2_SECRET_ACCESS_KEY=your_secret_access_key

# Bucket untuk Video (streaminganime)
R2_BUCKET_NAME=streaminganime
R2_PUBLIC_URL=https://pub-youraccount.r2.dev

# Bucket untuk Frontend (front-end) - Optional, jika terpisah
# Jika tidak diisi, akan menggunakan R2_BUCKET_NAME
R2_BUCKET_FRONTEND=front-end
R2_FRONTEND_PUBLIC_URL=https://pub-youraccount.r2.dev

# ============================================
# EXTERNAL APIs
# ============================================
OPENAI_API_KEY=your_openai_api_key
HF_TOKEN=your_huggingface_token

# ============================================
# OPTIONAL SETTINGS
# ============================================
# Refresh token cleanup interval (minutes)
REFRESH_TOKEN_CLEANUP_MINUTES=60

# Maximum refresh tokens per user
REFRESH_TOKEN_MAX=5
